<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.khkhm.notebook.presentation.notes.NotesActivity">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/note_act_add_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:clickable="true"
        android:tint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_add"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/notes_recv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/note_act_notebook_name"/>

    <EditText
        android:id="@+id/note_act_notebook_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="32dp"
        android:autoSizeMinTextSize="18sp"
        android:gravity="center_vertical"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/note_act_notebook_color"
        app:layout_constraintEnd_toStartOf="@+id/note_act_notebook_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/note_act_notebook_color"/>

    <android.support.v7.widget.CardView
        android:id="@+id/note_act_notebook_color"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="56dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>
